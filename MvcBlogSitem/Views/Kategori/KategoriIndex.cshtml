@model IEnumerable<MvcBlogSitem.Models.Kategori>

@{
    ViewBag.Title = "KategoriIndex";
}


<p>
    @Html.ActionLink("Kategori Ekle", "Create",null, new { @class = "btn btn-primary btn-xs" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Adi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aciklama)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Adi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Aciklama)
        </td>
       
        <td>
            @Html.ActionLink("Sil", "Sil", new { id = item.KategoriId }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
