@model IEnumerable<MvcBlogSitem.Models.Makale>

<div class="sidebox widget">
    <h3 class="widget-title section-title">Popüler Makaleler</h3>
    <ul class="post-list">
        @foreach (var makale in Model)
        {
        <li>
            <div class="icon-overlay"> <a href="/Makale/Detay/@makale.MakaleId"><img src="@Url.Content(makale.Resim.KucukBoyut)" alt="" /> </a> </div>
            <div class="meta">
                <h5><a href="/Makale/Detay/@makale.MakaleId">@makale.Baslik</a></h5>
                <em>@makale.EklenmeTarihi.ToShortDateString() <span class="comments"><a href="#">@makale.Yorums.Count <i class="icon-chat-1"></i></a></span></em>
            </div>
        </li>
        }
        
        
    </ul>
    <!-- /.post-list -->
</div>
